<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.jjYBdx4IL.graphics.opencv</groupId>
    <artifactId>dist</artifactId>
    <version>3.2.0-SNAPSHOT</version>
    
    <name>OpenCV :: Dist</name>
    <url>https://github.com/jjYBdx4IL/opencv</url>
    <inceptionYear>2017</inceptionYear>

    <organization>
        <name>Github jjYBdx4IL Projects</name>
        <url>https://github.com/jjYBdx4IL</url>
    </organization>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.3.0</version>
                <executions>
                    <execution>
                        <id>install-jbpm</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://sourceforge.net/projects/opencvlibrary/files/opencv-win/3.2.0/opencv-3.2.0-vc14.exe/download</url>
                            <unpack>false</unpack>
                            <outputDirectory>${project.build.directory}/winlibs</outputDirectory>
                            <md5>7631e708a9ae036569e400ba43886861</md5>
                            <outputFileName>opencv.exe</outputFileName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
<!--            <plugin>
                <artifactId>maven-toolchains-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>toolchain</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <toolchains>
                        <paths>
                            <id>foo-bar</id>
                        </paths>
                    </toolchains>
                </configuration>
            </plugin>-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <!-- Enable "paths" Toolchain provided by Exec Maven Plugin -->
                <!--<extensions>true</extensions>-->
                <executions>
                    <execution>
                        <id>unpack-7z</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>
                </executions>
                <configuration>
                    <!--<toolchain>paths</toolchain>-->
                    <executable>C:\cygwin64\lib\p7zip\7z.exe</executable>
                    <workingDirectory>${project.build.directory}\winlibs</workingDirectory>
                    <arguments>
                        <argument>x</argument>
                        <argument>-bb1</argument>
                        <argument>opencv.exe</argument>
                        <argument>opencv/build/java</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
